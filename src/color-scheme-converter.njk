  // Track the currently selected theme
  let currentTheme = Object.keys(themesPresets)[0];

  /**
    * Renders theme selection buttons dynamically based on themesPresets object.
    * If there's only one theme, hides the theme selector entirely.
    */
  function renderThemeButtons() {
    const themeSelector = document.getElementById("theme-selector");
    const themeTemplate = document.querySelector("#themebutton");
    const themeSelectorSection = themeSelector.closest(".section");
    const themeCount = Object.keys(themesPresets).length;

    // Hide theme selector if there's only one theme
    if (themeCount <= 1) {
      themeSelectorSection.style.display = "none";
      // If there's only one theme, set it as current
      if (themeCount === 1) {
        currentTheme = Object.keys(themesPresets)[0];
      }
      renderPresetButtons(currentTheme);
      return;
    } else {
      themeSelectorSection.style.display = "";
    }

    // Clear existing theme buttons
    while (themeSelector.children.length > 1) {
      themeSelector.removeChild(themeSelector.lastChild);
    }

    // Add theme buttons
    Object.keys(themesPresets).forEach(function (theme, index) {
      const clone = themeTemplate.content.cloneNode(true);
      const themeId = `theme-${theme}`;
      const input = clone.querySelector("input");
      input.value = theme;
      input.id = themeId;

      if (index === 0) {
        input.checked = true;
      }

      const label = clone.querySelector("label");
      label.htmlFor = themeId;
      label.textContent = theme;

      themeSelector.appendChild(clone);
    });

    // Add event listeners to theme buttons
    document.querySelectorAll('input[name="theme"]').forEach((radio) => {
      radio.addEventListener("change", () => {
        currentTheme = radio.value;
        renderPresetButtons(currentTheme);
      });
    });
  }

  /**
    * Renders preset selection buttons for the given theme.
    * Each preset shows the old name, and if different, the new name in parentheses.
    * @param {string} theme - The theme name to render presets for
    */
  function renderPresetButtons(theme) {
    const presetSelector = document.getElementById("preset-selector");
    const template = document.querySelector("#presetbutton");

    // Clear existing preset buttons
    while (presetSelector.children.length > 1) {
      presetSelector.removeChild(presetSelector.lastChild);
    }

    // Add preset buttons for the selected theme
    Object.values(themesPresets[theme]).forEach(function (preset, index) {
      const clone = template.content.cloneNode(true);
      const presetId = `${theme}-${preset.new}`;
      const input = clone.querySelector("input");
      input.value = preset.new;
      input.id = presetId;

      if (index === 0) {
        input.checked = true;
      }

      const label = clone.querySelector("label");
      label.htmlFor = presetId;
      label.textContent = `${preset.old}${
        preset.new !== preset.old ? ` (${preset.new})` : ""
      }`;

      if (!preset.screenshot || preset.screenshot === "") {
        clone.querySelector(".preset-preview").remove();
      } else {
        const img = clone.querySelector("img");
        img.src = preset.screenshot;
        img.alt = `${preset.old} Preset Preview`;

        const previewTitle = clone.querySelector(".preset-preview-title");
        previewTitle.textContent = `${preset.old} Preset`;
      }

      presetSelector.appendChild(clone);
    });
  }

