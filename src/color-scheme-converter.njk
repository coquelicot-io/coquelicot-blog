<style>
  :root {
    --color-background: #fafafa;
    --color-background--muted: #f8f8f8;
    --color-background--bright: #ffffff;
    --color-text: #222222;
    --color-text--muted: #666666;
    --color-border: #e5e5e5;
    --color-primary: #f0053c;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Karla", helvetica, arial, sans-serif,
      Roboto, sans-serif;
    background: var(--color-background);
    color: var(--color-text);
    line-height: 1.6;
    font-size: 16px;
  }

  .logo {
    width: 120px;
    height: auto;
    margin-bottom: 20px;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    background: var(--color-background--bright);
    min-height: 100vh;
  }

  .header {
    background: var(--color-background--bright);
    border-bottom: 1px solid var(--color-border);
    padding: 60px 40px 40px;
    text-align: center;
  }

  .header h1 {
    font-size: 2.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 12px;
    letter-spacing: -0.02em;
  }

  .header p {
    font-size: 1.125rem;
    color: var(--color-text);
    font-weight: 400;
  }

  .main-content {
    padding: 40px;
  }

  .section {
    margin-bottom: 48px;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 20px;
    letter-spacing: -0.01em;
  }

  .preset-selector {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 12px;
    margin-bottom: 20px;
  }

  .preset-option {
    position: relative;
  }

  .preset-option input[type="radio"] {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .preset-option label {
    display: block;
    padding: 12px 20px;
    background: var(--color-background--muted);
    border: 1px solid var(--color-border);
    /*border-radius: 6px;*/
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: center;
    font-weight: 500;
    color: var(--color-text--muted);
    font-size: 15px;
  }

  .preset-option input[type="radio"]:checked + label {
    background: var(--color-primary);
    color: var(--color-background--bright);
    border-color: var(--color-primary);
  }

  .preset-option label:hover {
    border-color: var(--color-border);
    background: var(--color-text);
    color: var(--color-background--bright);
  }

  .preset-option input[type="radio"]:checked + label:hover {
    background: var(--color-text);
    border-color: var(--color-text);
  }

  .preset-preview {
    position: absolute;
    top: 70px;
    left: 50%;
    transform: translateX(-50%);
    width: 280px;
    height: 180px;
    background: white;
    /*border-radius: 8px;*/
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border: 1px solid var(--color-border);
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease;
    z-index: 1000;
    pointer-events: none;
  }

  .preset-preview::before {
    content: "";
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 8px solid white;
  }

  .preset-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
    display: block;
  }

  .preset-option:hover .preset-preview {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(-8px);
  }

  .preset-preview-title {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    color: white;
    padding: 16px 12px 8px;
    font-size: 13px;
    font-weight: 500;
  }

  .textarea-container {
    position: relative;
    margin-bottom: 24px;
  }

  textarea {
    width: 100%;
    min-height: 200px;
    padding: 16px;
    border: 1px solid var(--color-border);
    /*border-radius: 6px;*/
    font-family: "SF Mono", "Monaco", "Menlo", "Consolas", monospace;
    font-size: 14px;
    line-height: 1.5;
    resize: vertical;
    background: var(--color-background--muted);
    transition: all 0.2s ease;
    color: var(--color-text);
  }

  textarea:focus {
    outline: none;
    border-color: var(--color-text);
    background: var(--color-background--bright);
  }

  .button {
    background: var(--color-primary);
    color: var(--color-background--bright);
    border: none;
    padding: 12px 20px;
    /*border-radius: 6px;*/
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 15px;
  }

  .button:hover {
    background: var(--color-text);
  }

  .button:active {
    transform: translateY(1px);
  }

  .copy-button {
    position: absolute;
    top: 12px;
    right: 12px;
    background: var(--color-text);
    border: none;
    color: var(--color-background--bright);
    padding: 6px 10px;
    /*border-radius: 4px;*/
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .copy-button:hover {
    background: var(--color-primary);
  }

  .output-container {
    position: relative;
    background: var(--color-background--muted);
    border: 1px solid var(--color-border);
    /*border-radius: 6px;*/
    overflow: hidden;
  }

  .output-header {
    background: var(--color-background);
    color: var(--color-text--muted);
    padding: 12px 16px;
    font-weight: 500;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--color-border);
    font-size: 14px;
  }

  .output-content {
    padding: 16px;
    color: var(--color-text);
    font-family: "SF Mono", "Monaco", "Menlo", "Consolas", monospace;
    font-size: 13px;
    line-height: 1.5;
    max-height: 400px;
    overflow-y: auto;
    white-space: pre-wrap;
    background: var(--color-background--bright);
  }

  .status-message {
    padding: 12px 16px;
    /*border-radius: 6px;*/
    margin-bottom: 20px;
    font-weight: 500;
    font-size: 14px;
  }

  .status-success {
    background: #e1f2e4;
    color: #04911c;
    border-radius: 4px;
    padding: 5px 8px;
  }

  .status-error {
    background: #f4eaea;
    color: #c10808;
    border-radius: 4px;
    padding: 5px 8px;
  }

  @media (max-width: 768px) {
    .container {
