  /**
    * Main function that processes the user's settings_data.json and migrates
    * their old color settings to the new color scheme format.
    *
    * Process:
    * 1. Parse and validate the input JSON
    * 2. Get the selected preset's default values
    * 3. Add color schemes structure to the JSON
    * 4. Map user's old color values to the new color scheme settings
    * 5. Display the result
    */
  function processJson() {
    try {
      const inputText = document.getElementById("inputJson").value.trim();

      // Extract JSON from the input (strip any comments if present)
      const jsonMatch = inputText.match(/\{[\s\S]*\}/);
      if (!jsonMatch) {
        throw new Error("No valid JSON found in input");
      }

      const userJson = JSON.parse(jsonMatch[0]);

      // Validate the JSON structure
      if (!userJson.current) {
        throw new Error('Input JSON must have a "current" property');
      }

      const selectedTheme = getSelectedTheme();
      const selectedPreset = getSelectedPreset();

      // Get the preset data based on the selected theme and preset
      const presetData = presets[selectedTheme][selectedPreset];

      if (!presetData) {
        throw new Error(
          `Preset "${selectedTheme} - ${selectedPreset}" not found`
        );
      }

      // Check if already migrated
      if (userJson.current.color_schemes) {
        throw new Error(
          `Color schemes are already defined in the input JSON. Please remove them before applying the preset`
        );
      }

      // Start with the original JSON structure
      const result = userJson;

      // Step 1: Add the preset's default color schemes to the current object
      result.current.color_schemes = presetData.color_schemes;

      // Step 2: Replace presets if they weren't already upgraded by Shopify
      if (!result.presets?.[presetData.new]?.color_schemes) {
        result.presets = presets[selectedTheme];
      }

      // Step 3: Apply user's custom color values using the mapping rules
      // For each color scheme (background-1, background-2, etc.)
      Object.keys(result.current.color_schemes).forEach((schemeName) => {
        const schemeSettings =
          result.current.color_schemes[schemeName].settings;
        const schemeMappings = mappings[selectedTheme][schemeName] || {};

        // For each setting in this color scheme
        Object.keys(schemeSettings).forEach((settingKey) => {
          let sourceKey;

          // Determine which old setting to pull from
          if (typeof schemeMappings[settingKey] == "string") {
            // Simple mapping: new_setting -> "old_setting"
            sourceKey = schemeMappings[settingKey];
          } else if (
            typeof schemeMappings[settingKey] == "object" &&
            schemeMappings[settingKey][selectedPreset]
          ) {
            // Preset-specific mapping: different source for different presets
            sourceKey = schemeMappings[settingKey][selectedPreset];
          }

          // If the user has a custom value for this old setting, use it
          // Otherwise, the preset default (already set above) will be used
          if (sourceKey && userJson.current[sourceKey]) {
            schemeSettings[settingKey] = userJson.current[sourceKey];
          }
        });
      });

      // Display the result
      document.getElementById("outputContent").textContent = JSON.stringify(
        result,
        null,
        2
      );
      showStatus(
        `JSON processed successfully for ${selectedTheme} theme with ${selectedPreset} preset!`,
        "success"
      );
    } catch (error) {
      document.getElementById(
        "outputContent"
      ).textContent = `Error: ${error.message}`;
      showStatus(`Error: ${error.message}`, "error");
    }
  }

  /**
    * Copies the generated output JSON to the clipboard.
    */
  function copyOutput() {
    const outputContent =
      document.getElementById("outputContent").textContent;
    navigator.clipboard
      .writeText(outputContent)
      .then(() => {
        showStatus("Output copied to clipboard!", "success");
      })
      .catch(() => {
        showStatus("Failed to copy to clipboard", "error");
      });
  }

